ion-view(view-title='管理员')
  ion-nav-buttons(side="right")
    button.button.button-clear(ng-click='addOrders()') 
      img(src="img/button-add1.png" style="max-width:30px;max-height:30px;width: 100%;height: 100%;")
  ion-content
    #search-bar
    .item.item-input-inset
      label#search-input.item-input-wrapper
        i.icon.ion-search.placeholder-icon
        input(type='text', placeholder='Search', ng-model='query', ng-change='search()')
    ion-refresher(pulling-text=' ', on-refresh='doRefresh()')
    ion-list
      div(style="width:100%")
        li.classify(ng-click="") 全部订单
        li.classify.active(ng-click="") 未完成订单
        li.classify(ng-click="") 已完成订单
      ion-item.item-remove-animate.item-icon-right(ng-repeat='chat in chats', type='item-text-wrap', href='#/app/orders/{{chat.id}}',style="min-height:72px;")
        img(ng-src='img/unfinish.png' style="max-width:8px;max-height:72px;width: 100%;height: 100%;" )
        img(ng-src='{{chat.face}}' style="max-height:72px;margin:0px 6px")
        .intro(style="display:inline-block")
          h2(style="color:#3191fd")  
            span(style="color:#ff4343") [未完成]
            {{chat.name}}
          p(style="height:30px") {{chat.lastText}}
          span(style="color:#a6a6a6;font-size:80%") 2015-01-01 16:57
        i.icon.ion-chevron-right.icon-accessory
        ion-option-button.button-assertive(ng-click='remove(chat)')
          | Delete
