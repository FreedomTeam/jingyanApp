//
  This template loads for the 'tab.friend-detail' state (app.js)
  'friend' is a $scope variable created in the FriendsCtrl controller (controllers.js)
  The FriendsCtrl pulls data from the Friends service (service.js)
  The Friends service returns an array of friend data
ion-view(view-title='订单详情')
  ion-nav-buttons(side="right")
    button.button.button-clear(ng-click="" style="font-family: Microsoft YaHei;font-weight: 500;") 发送
  ion-content
    div(style="padding-left:10px")
      h4(style="color:#3191fd;")
        span(style="color:#ff4343") [未完成] {{order.id}}
        span(style="float:right;color:#a6a6a6;font-size:80%;line-height:21px;") {{order.updatedAt|date:'yyyy-MM-dd hh:mm'}}
      img(ng-src='img/add-photo.png', style='width: 64px; height: 64px')
    div.detail
      p 驳货地址：
        span {{order.address}}
      p 同行编号：
        span {{order.parterNo}}
      p 进仓编号：
        span {{order.warehouseReceptNo}}
      p 件数：
        span {{_.round(order.count)}}
      p 立方：
        span {{_.round(order.volume, 2)}}
      p 吨位：
        span {{_.round(order.weight, 2)}}
